<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.bless.fresco.widget.FrescoImageView
        android:id="@+id/image_select_image_frescoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_select_ic_default_image" />

    <ImageView
        android:id="@+id/image_select_check_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/image_select_ic_uncheck" />

</RelativeLayout>